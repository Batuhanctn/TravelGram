{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      ".indexOn": ["username"],
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null || auth.uid == $uid"
      }
    },
    "posts": {
      ".indexOn": ["userId", "timestamp"],
      "$postId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('userId').val() == auth.uid)"
      }
    }
  }
}
